<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Posts</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-900 text-white font-mono font-bold">
    <div class="min-h-screen px-4 sm:px-10 py-10">
      <div class="flex justify-between items-center mb-10">
        <h1 class="text-3xl sm:text-4xl">üì∞ All Posts</h1>
        <a
          href="/profile"
          class="py-2 px-4 bg-orange-500 rounded-lg text-black hover:bg-orange-400 transition"
        >
          Back to Profile
        </a>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% posts.forEach(post => { %>
        <div
          class="bg-zinc-800 p-6 rounded-xl shadow-lg border-2 border-zinc-700"
        >
          <h2 class="text-xl text-blue-400 mb-2">@<%= post.user.username %></h2>
          <p class="mb-4 break-words"><%= post.content %></p>
          <div class="flex justify-between items-center">
            <div class="flex items-center gap-2">
              <% if (post.likes.some(like => like._id.toString() ===
              currentUser.userid)) { %>
              <a
                href="/likeAll/<%= post._id %>"
                class="bg-zinc-500 hover:bg-white text-white hover:text-black px-4 py-1 rounded-lg text-sm"
              >
                Unlike
              </a>
              <% } else { %>
              <a
                href="/likeAll/<%= post._id %>"
                class="bg-red-500 hover:bg-white text-white hover:text-black px-4 py-1 rounded-lg text-sm"
              >
                Like
              </a>
              <% } %>
              <span class="text-zinc-400 text-sm"
                ><%= post.likes.length %> ‚ù§Ô∏è</span
              >
            </div>
            <span class="text-xs text-zinc-500"
              ><%= new Date(post.date).toLocaleString() %></span
            >
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
