<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-900 text-white font-mono font-bold">
    <div
      class="w-full min-h-screen flex flex-col items-center p-6 sm:p-10 gap-10"
    >
      <!-- NavBar -->
      <div
        class="w-full flex flex-col sm:flex-row justify-between items-center gap-4"
      >
        <h1 class="text-3xl sm:text-4xl text-center sm:text-left">
          Edit Your Profile Picture
        </h1>
        <a
          class="py-2 px-4 bg-orange-500 rounded-lg text-black hover:bg-orange-400 transition text-center"
          href="/profile"
        >
          Back to Profile
        </a>
      </div>

      <!-- Edit Post Section -->
      <!-- Edit Post Section -->
      <form
        class="w-full max-w-md bg-zinc-800 p-6 rounded-2xl shadow-xl flex flex-col items-center gap-4"
        action="/upload"
        method="POST"
        enctype="multipart/form-data"
      >
        <label
          for="profilepic"
          class="block w-full text-left text-gray-300 text-2xl mb-2"
        >
          Select your profile picture:
        </label>
        <input
          type="file"
          name="profilepic"
          id="profilepic"
          accept="image/*"
          required
          class="w-full px-3 py-2 bg-zinc-700 text-white rounded-lg border border-zinc-600"
        />

        <input
          type="submit"
          value="Upload"
          class="mt-4 bg-orange-500 hover:bg-orange-400 text-black px-4 py-2 rounded-lg cursor-pointer transition"
        />
      </form>
    </div>
    <script src="./javascripts/script.js"></script>
  </body>
</html>
